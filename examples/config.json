{
  "update_interval": 10,
  "poll_interval": 0.1,
  "theme": "dark",

  "panel_params": {
    "weather": {
      "email": "me@example.com",
      "domain": "example.com",
      "latitude": 99.99,
      "longitude": -11.11
    }
  },

  "device": {
    "class": "rpi",
    "params": {
      "framebuffer_device": "/dev/fb1",
      "framebuffer_driver": "fbcon",
      "width": 320,
      "height": 240,
      "brightness": 1023,
      "brightness_pin": 18,
      "brightness_frequency": 1000,
      "button_pins": [17, 22, 23, 27]
    }
  },

  "themes": {
    "dark": {
      "background": [0, 0, 0],
      "border": [0, 0, 0],
      "time": [255, 0, 0],
      "date": [200, 0, 200],
      "seconds": [180, 0, 0],
      "temperature": [200, 200, 0],
      "conditions": [0, 200, 200],
      "message": [128, 128, 128],
      "icon_border": [128, 128, 128]
    },

    "light": {
      "background": [160, 160, 160],
      "border": [160, 160, 160],
      "time": [160, 0, 0],
      "date": [140, 0, 140],
      "seconds": [120, 0, 0],
      "temperature": [80, 80, 0],
      "conditions": [0, 80, 80],
      "message": [128, 128, 128],
      "icon_border": [128, 128, 128]
    }
  },

  "buttons": {
    "quit": 3,
    "poweroff": 4
  },

  "screens": {
    "clock": {
      "rows": [
        {
          "height": 120,
          "panel": {
            "name": "time",
            "class": "time",
            "color": "time",
            "font": "digitaldisplayregular-odeo:132",
            "fx": 1,
            "fy": 0.5,
            "margins": [10, 1],
            "params": {
              "format": "%H:%M"
            }
          }
        },
        {
          "height": 60,
          "columns": [
            {
              "width": 260,
              "panel": {
                "name": "date",
                "class": "time",
                "color": "date",
                "font": "ibmplexsans-text:40",
                "fx": 0,
                "fy": 0.5,
                "width": 260,
                "margins": [10, 1],
                "params": {
                  "format": "%a %b %d"
                }
              }
            },
            {
              "width": 60,
              "panel": {
                "name": "seconds",
                "class": "time",
                "color": "seconds",
                "font": "digitaldisplayregular-odeo:40",
                "fx": 0,
                "fy": 0.5,
                "width": 60,
                "margins": [10, 1],
                "params": {
                  "format": "%S"
                }
              }
            }
          ]
        },
        {
          "height": 60,
          "columns": [
            {
              "width": 80,
              "panel": {
                "name": "temperature",
                "class": "weather",
                "color": "temperature",
                "font": "ibmplexsans-text:36",
                "fx": 0,
                "fy": 0.5,
                "width": 80,
                "margins": [10, 1, 1, 1],
                "params": {
                  "format": "%T",
                  "metric": false
                }
              }
            },
            {
              "width": 180,
              "panel": {
                "name": "conditions",
                "class": "weather",
                "color": "conditions",
                "font": "ibmplexsans-text:18",
                "fx": 0,
                "fy": 0.5,
                "width": 180,
                "margins": [10, 1, 1, 1],
                "params": {
                  "format": "%D"
                }
              }
            },
            {
              "width": 60,
              "panel": {
                "name": "icon",
                "class": "weather",
                "border_color": "icon_border",
                "font": "ibmplexsans-text:12",
                "fx": 0.5,
                "fy": 0.5,
                "width": 60,
                "margins": [2, 2, 2, 2],
                "params": {
                  "format": "%I"
                }
              }
            }
          ]
        },
        {
          "height": null,
          "panel": {
            "name": "message",
            "class": "message",
            "color": "message",
            "font": "ibmplexsans-text:12",
            "fx": 0,
            "fy": 0.5,
            "margins": [10, 1]
          }
        }
      ]
    }
  }

}
